<Window x:Class="HueMirror.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="50" Width="50"
         WindowStyle="None" AllowsTransparency="true" Background="Transparent" Topmost="True">
   <Border Name="WindowBorder" BorderBrush="Transparent" BorderThickness="0" CornerRadius="25">
      <Border.Background>
         <RadialGradientBrush GradientOrigin="0.75,0.25">
            <GradientStop Color="#ddffffff" Offset="0.0" />
            <GradientStop x:Name="MainColour" Color="red" Offset="1.4" />
         </RadialGradientBrush>
      </Border.Background>
      <Grid>
         <Thumb Opacity="0" 
                Background="{x:Null}" 
                Foreground="{x:Null}" 
                DragDelta="OnDragDelta"/>
      </Grid>
   </Border>
</Window>
